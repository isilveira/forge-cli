@using System.Linq
@using Forge.CLI.Core.Templates
@using Forge.CLI.Shared.Extensions
@using Forge.CLI.Shared.Helpers
@model TemplateModel
@{
    var projectName = Model.Project.Name;
    var contextName = Model.ContextName;

    var referencedNamespaces = new List<string>()
    {
        "BAYSOFT.Abstractions.Infrastructures.Data",
        $"{projectName}.Core.Domain.{contextName}.Interfaces.Infrastructures.Data",
    };
}

@foreach (var referencedNamespace in referencedNamespaces.Order().Distinct())
{
<text>using @(referencedNamespace);
</text>
}

namespace @(projectName).Infrastructures.Data.@(contextName)
{
    public @(Model.Project.UseSealedClasses ? "sealed ":"")class @(contextName)DbContextWriter : Writer, I@(contextName)DbContextWriter
    {
        public @(contextName)DbContextWriter(@(contextName)DbContext context)
            : base(context)
        {
        }
    }
}