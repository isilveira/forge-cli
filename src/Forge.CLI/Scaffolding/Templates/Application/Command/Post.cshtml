    public @(Model.Project.UseSealedClasses ? "sealed ":"")class Post@(entityName)CommandResponse : ApplicationResponse<@(entityName)>
    {
        public Post@(entityName)CommandResponse(Tuple<int, int, WrapRequest<@(entityName)>, Dictionary<string, object>, Dictionary<string, object>, string, long?> tuple)
            : base(tuple)
        {
        }

        public Post@(entityName)CommandResponse(int statusCode, WrapRequest<@(entityName)> request, object data, string message = "Successful operation!", long? resultCount = null)
            : base(statusCode, request, data, message, resultCount)
        {
        }
    }
    public @(Model.Project.UseSealedClasses ? "sealed ":"")class Post@(entityName)CommandHandler : ApplicationRequestHandler<@(entityName), Post@(entityName)Command, Post@(entityName)CommandResponse>
    {
        private ILoggerFactory Logger { get; set; }
        private IMediator Mediator { get; set; }
        private IStringLocalizer Localizer { get; set; }
        private I@(contextName)DbContextWriter Writer { get; set; }
        public Post@(entityName)CommandHandler(
            ILoggerFactory logger,
            IMediator mediator,
            IStringLocalizer<@(entityName)> localizer,
            I@(contextName)DbContextWriter writer
        )
        {
            Logger = logger;
            Mediator = mediator;
            Localizer = localizer;
            Writer = writer;
        }
        public override async Task<Post@(entityName)CommandResponse> Handle(Post@(entityName)Command request, CancellationToken cancellationToken)
        {
            try
            {
                request.IsValid(Localizer, true);

                var data = request.Post();

                await Mediator.Send(new Create@(entityName)ServiceRequest(data));

                await Writer.CommitAsync(cancellationToken);

                await Mediator.Publish(new Post@(entityName)Notification(data));

                return new Post@(entityName)CommandResponse((int)HttpStatusCode.Created, request, data, Localizer["Successful operation!"], 1);
            }
            catch (Exception exception)
            {
                Logger.CreateLogger<Post@(entityName)CommandHandler>().Log(LogLevel.Error, exception, exception.Message);

                return new Post@(entityName)CommandResponse(ExceptionResponseHelper.CreateTuple(Localizer, request, exception));
            }
        }
    }
}
