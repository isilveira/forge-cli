    public @(Model.Project.UseSealedClasses ? "sealed ":"")class Get@(entityCollection)ByFilterQueryResponse : ApplicationResponse<@(entityName)>
    {
        public Get@(entityCollection)ByFilterQueryResponse(Tuple<int, int, WrapRequest<@(entityName)>, Dictionary<string, object>, Dictionary<string, object>, string, long?> tuple)
            : base(tuple)
        {
        }

        public Get@(entityCollection)ByFilterQueryResponse(int statusCode, WrapRequest<@(entityName)> request, object data, string message = "Successful operation!", long? resultCount = null)
            : base(statusCode, request, data, message, resultCount)
        {
        }
    }
    public @(Model.Project.UseSealedClasses ? "sealed ":"")class Get@(entityCollection)ByFilterQueryHandler : ApplicationRequestHandler<@(entityName), Get@(entityCollection)ByFilterQuery, Get@(entityCollection)ByFilterQueryResponse>
    {
        private ILoggerFactory Logger { get; set; }
        private IMediator Mediator { get; set; }
        private IStringLocalizer Localizer { get; set; }
        private I@(contextName)DbContextReader Reader { get; set; }
        public Get@(entityCollection)ByFilterQueryHandler(
            ILoggerFactory logger,
            IMediator mediator,
            IStringLocalizer<@(entityName)> localizer,
            I@(contextName)DbContextReader reader
        )
        {
            Logger = logger;
            Mediator = mediator;
            Localizer = localizer;
            Reader = reader;
        }
        public override async Task<Get@(entityCollection)ByFilterQueryResponse> Handle(Get@(entityCollection)ByFilterQuery request, CancellationToken cancellationToken)
        {
            try
            {
                long resultCount = 1;

                var id = request.Project(x => x.Id);

                var data = await Reader
                    .Query<@(entityName)>()
                    .AsNoTracking()
                    .FullSearch(request, out resultCount)
                    .ToListAsync(cancellationToken);

                return new Get@(entityCollection)ByFilterQueryResponse((int)HttpStatusCode.OK, request, data, Localizer["Successful operation!"], resultCount);
            }
            catch (Exception exception)
            {
                Logger.CreateLogger<Get@(entityCollection)ByFilterQueryHandler>().Log(LogLevel.Error, exception, exception.Message);

                return new Get@(entityCollection)ByFilterQueryResponse(ExceptionResponseHelper.CreateTuple(Localizer, request, exception));
            }
        }
    }
}
