@using Forge.CLI.Shared.Extensions
@using Forge.CLI.Shared.Helpers
@using System.Linq
@model Forge.CLI.Core.Templates.TemplateModel
@{
    var projectName = Model.Project.Name;
    var contextName = Model.ContextName;
    var entityName = Model.EntityName;
    var entityCollection = RazorHelper.Pluralize(entityName);

    var queryRelationsManyToOne = Model.Entity.Relations.Where(r => r.Value.Type == "many-to-one").AsQueryable();
    var queryRelationsOneToMany = Model.Entity.Relations.Where(r => r.Value.Type == "one-to-many").AsQueryable();

    var referencedNamespaces = new List<string>()
    {
        "BAYSOFT.Abstractions.Core.Application",
        "BAYSOFT.Abstractions.Core.Domain.Exceptions",
        "BAYSOFT.Abstractions.Crosscutting.Helpers",
        "FluentValidation",
        "MediatR",
        "Microsoft.EntityFrameworkCore",
        "Microsoft.Extensions.Localization",
        "Microsoft.Extensions.Logging",
        "ModelWrapper",
        "ModelWrapper.Extensions.Select",
        "System",
        "System.Collections.Generic",
        "System.Linq",
        "System.Threading",
        "System.Threading.Tasks",
        $"{projectName}.Core.Domain.{contextName}.Aggregates.{entityCollection}.Entities",
        $"{projectName}.Core.Domain.{contextName}.Interfaces.Infrastructures.Data",
    };
}
@foreach (var referencedNamespace in referencedNamespaces.Order().Distinct())
{
<text>using @(referencedNamespace);
</text>
}

namespace @(projectName).Core.Application.@(contextName).Aggregates.@(entityCollection).Queries
{
    public sealed class Get@(entityName)ByIdQuery : ApplicationRequest<@(entityName), Get@(entityName)ByIdQueryResponse>
    {
        public Get@(entityName)ByIdQuery()
        {
            ConfigKeys(x => x.Id);

            ConfigSuppressedProperties(x => x.Id);

@if (queryRelationsOneToMany.Any())
{
    foreach (var relation in queryRelationsOneToMany.ToList())
    {
<text>@(RazorHelper.Tab(3))ConfigSuppressedResponseProperties(x => x.@(relation.Key));
</text>
    }
}
else
{
<text>@(RazorHelper.Tab(3))// TODO: SUPPRESSED RESPONSE PROPERTIES
</text>
}

            Validator.RuleFor(x => x.Id).NotEmpty().WithMessage("{0} is required!");
        }
    }

    public class Get@(entityName)ByIdQueryResponse : ApplicationResponse<@(entityName)>
    {
    public Get@(entityName)ByIdQueryResponse(Tuple<int, int, WrapRequest<@(entityName)>, Dictionary<string, object>, Dictionary<string, object>, string, long?> tuple)
            : base(tuple)
        {
        }

        public Get@(entityName)ByIdQueryResponse(int statusCode, WrapRequest<@(entityName)> request, object data, string message = "Successful operation!", long? resultCount = null)
            : base(statusCode, request, data, message, resultCount)
        {
        }
    }
    public class Get@(entityName)ByIdQueryHandler : ApplicationRequestHandler<@(entityName), Get@(entityName)ByIdQuery, Get@(entityName)ByIdQueryResponse>
    {
        private ILoggerFactory Logger { get; set; }
        private IMediator Mediator { get; set; }
        private IStringLocalizer Localizer { get; set; }
        private I@(contextName)DbContextReader Reader { get; set; }
        public Get@(entityName)ByIdQueryHandler(
            ILoggerFactory logger,
            IMediator mediator,
            IStringLocalizer<@(entityName)> localizer,
            I@(contextName)DbContextReader reader
        )
        {
            Logger = logger;
            Mediator = mediator;
            Localizer = localizer;
            Reader = reader;
        }
        public override async Task<Get@(entityName)ByIdQueryResponse> Handle(Get@(entityName)ByIdQuery request, CancellationToken cancellationToken)
        {
            try
            {
                long resultCount = 1;

                var id = request.Project(x => x.Id);

                var data = await Reader
                    .Query<@(entityName)>()
                    .Where(x => x.Id == id)
                    .Select(request)
                    .SingleOrDefaultAsync();

                if (data == null)
                {
                    throw new EntityNotFoundException<@(entityName)>(Localizer);
                }

                return new Get@(entityName)ByIdQueryResponse((int)HttpStatusCode.OK, request, data, Localizer["Successful operation!"], resultCount);
            }
            catch (Exception exception)
            {
                Logger.CreateLogger<Get@(entityName)ByIdQueryHandler>().Log(LogLevel.Error, exception, exception.Message);

                return new Get@(entityName)ByIdQueryResponse(ExceptionResponseHelper.CreateTuple(Localizer, request, exception));
            }
        }
    }
}